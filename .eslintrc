{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "globals": {
    "describe": true,
    "test": true,
    "it": true,
    "expect": true,
    "beforeEach": true
  },
  "rules": {
    "react/jsx-uses-react": "error", "react/jsx-uses-vars": "error",
    "indent": [
        "error",
        "space"
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ]
  },
  "plugins": [
    "react"
  ]
}
